<%= form_for :session, url: login_path do |f| %>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <%= f.text_field :user_name, placeholder: "Enter email or contact number", class: "form-control form-control-in" %>
                <%= f.label :user_name, class: "form-label"  %>
            </div>
            <div class="form-group">
                <%= f.password_field :password, placeholder: "Enter password", class: "form-control form-control-in" %>
                <%= f.label :password, class: "form-label"  %>
            </div>
            <%= f.submit "Login", class: "btn btn-success m-auto"%>
        </div>
    </div>
<% end %>