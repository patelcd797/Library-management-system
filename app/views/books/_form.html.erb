<%= form_with(model: @book, local:true) do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: "Title of book", class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: "Short description of book", class: "form-control" %>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <div class="d-flex flex-column">
                    <%= f.label :author %>
                    <%= f.text_field :author, placeholder: "Author name", class: "form-control" %>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <div class="d-flex flex-column">
                    <%= f.label :language %>
                    <%= f.text_field :language, placeholder: "Language", class: "form-control" %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <div class="d-flex flex-column">
                    <%= f.label :price %>
                    <%= f.number_field :price, placeholder: "Price", step: :any, class: "form-control" %>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <div class="d-flex flex-column">
                    <%= f.label :no_of_books %>
                    <%= f.number_field :no_of_books, placeholder: "No of Books", class: "form-control" %>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class:"d-block" %>
    </div>
    <%= f.submit(@book.new_record? ? "Add Book" : "Update Book", class: "btn btn-success m-auto")%>
<% end %>